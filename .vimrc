syntax on
color moonlight

set tabstop=4
set softtabstop=4
set number
set path+=**
set noerrorbells
set expandtab
set smartindent
set noswapfile
set incsearch
set shiftwidth=4

let mapleader = " "

nnoremap <leader>h :wincmd h<CR>
nnoremap <leader>j :wincmd j<CR>
nnoremap <leader>k :wincmd k<CR>
nnoremap <leader>l :wincmd l<CR>
nnoremap <leader>f :30vs .<CR>
